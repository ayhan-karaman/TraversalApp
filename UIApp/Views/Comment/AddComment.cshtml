 <div class="leave-comment-form mt-5" id="reply">
                    <h4 class="side-title mb-2">Yorum Bırakabilirsiniz...</h4>
                    <p class="mb-4">Lütfen ilgili alanları doldurunuz... *
                    </p>
                    <form asp-action="AddComment" asp-controller="Comment" method="post">

                        <div class="form-group">
                            <textarea name="Content" class="form-control" placeholder="Yorumunuzu yazabilirsiniz" required=""
                                spellcheck="false"></textarea>
                        </div>
                        <div class="input-grids row">

                            <div class="form-group col-lg-6">
                                <input type="text" name="CommentUser" class="form-control" placeholder="Ad Soyad"
                                    required="">
                            </div>
                            <div class="form-group col-lg-6">
                                <input value="@ViewBag.id" type="hidden" name="DestinationID" class="form-control" placeholder="Destination ID" required="">
                            </div>
                        </div>

                        <div class="submit text-right">
                            <button class="btn btn-style btn-primary">Yorum Yap</button>
                          </div>
                    </form>
                </div>