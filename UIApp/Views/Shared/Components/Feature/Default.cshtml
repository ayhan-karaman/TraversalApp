@using Entities.Concrete
@model List<Feature>
@{
    var only = Model.Take(1).First();
    var list = Model.Skip(1);
}
  <div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6">
              <div class="maghny-grid">
                <figure class="effect-lily border-radius  m-0">
                    <img class="img-fluid" src="@only.Image" alt="" />
                    <figcaption>
                        <div>
                            <h4>@only.PostName</h4>
                            <p>Fiyat @only.Description </p>
                        </div>

                    </figcaption>
                </figure>
            </div>
            </div>
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                @foreach (var item in list)
                {
                    <div class="maghny-gd-1 col-6 mt-2">
                        <div class="maghny-grid">
                            <figure class="effect-lily border-radius">
                                <img class="img-fluid" src="@item.Image" alt="" />
                                <figcaption>
                                    <div>
                                        <h4>@item.PostName</h4>
                                        <p>Fiyat @item.Description</p>
                                    </div>

                                </figcaption>
                            </figure>
                        </div>
                    </div>
                }
                    
                </div>
            </div>
        </div>
    </div>
</div>
