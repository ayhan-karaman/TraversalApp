@model List<Guide>
 <div class="card  col-md-6">
    <div class="card-header">Rehberler</div>
          <ul class="list-group">
     
            @foreach (var item in Model)
            {

                  <li class="list-group-item border-0 d-flex justify-content-between align-items-center  mb-2">
                    <div class="me-3" >
                      <img src="@item.Image" style="border-radius: 50%; " class="skill-img" alt="skill img">
                    </div>
                    <div class="d-flex align-items-start flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">@item.Name</h6>
                        <p class="mb-0 text-xs">@item.Description.Substring(0, 20)</p>
                    </div>
                    <a href="#">İletişim Kur</a>
                  </li>
            }

          </ul>
          
</div>
