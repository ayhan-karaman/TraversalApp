@model List<Destination>
@{
    ViewData["Title"] = "Varış Noktaları";
   
}
<!-- about breadcrumb -->
  <section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
      <div class="container">
        <h2 class="title">Varış Noktaları </h2>
        <ul class="breadcrumbs-custom-path mt-2">
          <li><a href="#url">Ana Sayfa</a></li>
          <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Varış Noktaları </li>
        </ul>
      </div>
    </div>
  </section>
  <!-- //about breadcrumb -->
 <!--  Work gallery section -->
 <section class="grids-1 py-5">
  <div class="grids py-lg-5 py-md-4">
      <div class="container">
          <h3 class="hny-title mb-5">Varış Noktaları</h3>
          <div class="row">
            @foreach (var item in Model)
            {
                 <div class="col-lg-4 col-md-4 col-6 mt-md-0 mt-4">
                  <div class="column">
                      <a asp-controller="Destination" asp-action="DestinationDetails" asp-route-id="@item.ID"><img src="@item.DestinationImages.First().PathName" alt="" class="img-fluid"></a>
                      <div class="info">
                          <h4><a asp-controller="Destination" asp-action="DestinationDetails" asp-route-id="@item.ID">@item.City</a></h4>
                          <p>@item.DayNight </p>
                          <div class="dst-btm">
                            <h6 class="">Fiyat </h6>
                            <span>@item.Price ₺</span>
                          </div>
                      </div>
                  </div>
              </div>
            } 
             
          </div>
      </div>
</div></section>