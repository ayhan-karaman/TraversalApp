@model UserRegisterViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Kullanıcı Kayıt";
}

<div class="card card-authentication1 mx-auto my-5">
                <div class="card-body">
                <div class="card-content p-2">
                    <div class="text-center">
                        <img src="~/images/logo-icon.png" alt="logo icon">
                    </div>
                <div class="card-title text-uppercase text-center py-3">Kayıt Ol</div>
                    <form method="post">
                    <div class="form-group">
                    <label for="Name" class="sr-only">Adınız</label>
                    <div class="position-relative has-icon-right">
                        <input type="text" id="Name" asp-for="Name" class="form-control input-shadow" placeholder="Adınız">
                        <div class="form-control-position">
                             <i class="fa fa-user"></i>
                        </div>
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    </div>
                    <div class="form-group">
                    <label for="SurName" class="sr-only">Soyadınız</label>
                    <div class="position-relative has-icon-right">
                        <input type="text" id="SurName" asp-for="SurName" class="form-control input-shadow" placeholder="Soyadınız">
                        <div class="form-control-position">
                             <i class="fa fa-user"></i>
                        </div>
                        <span class="text-danger" asp-validation-for="SurName"></span>
                    </div>
                    </div>
                    <div class="form-group">
                    <label for="UserName" class="sr-only">Kullanıcı Adı</label>
                    <div class="position-relative has-icon-right">
                        <input type="text" id="UserName" asp-for="UserName" class="form-control input-shadow" placeholder="Kullanıcı Adınız">
                        <div class="form-control-position">
                            <i class="fa fa-phone"></i>
                        </div>
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    </div>

                    <div class="form-group">
                    <label asp-for="Email" class="sr-only">E Mail</label>
                    <div class="position-relative has-icon-right">
                        <input type="text" id="Email" asp-for="Email"  class="form-control input-shadow" placeholder="E-Posta Adresiniz">
                        <div class="form-control-position">
                             <i class="fa fa-envelope-open"></i>
                        </div>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    </div>
                    <div class="form-group">
                    <label asp-for="Password" class="sr-only">Şifre</label>
                    <div class="position-relative has-icon-right">
                        <input type="password" id="Password" asp-for="Password" class="form-control input-shadow" placeholder="Şifreniz">
                        <div class="form-control-position change-lock">
                            <i class="fa fa-lock"></i>
                        </div>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    </div>

                    <div class="form-group">
                    <label for="ConfirmPassword" class="sr-only">Şifre Doğrula</label>
                    <div class="position-relative has-icon-right">
                        <input type="password" id="ConfirmPassword" asp-for="ConfirmPassword" class="form-control input-shadow" placeholder="Şifrenizi Doğrulayın">
                        <div class="form-control-position change-lock">
                            <i class="fa fa-lock"></i>
                        </div>
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        <div class="text-danger" asp-validation-summary="ModelOnly"> </div>
                    </div>
                    </div>
                    
                    <button type="submit" class="btn btn-light btn-block">Kayıt Ol</button>
                    
                    
                    </form>
                </div>
                </div>
                <div class="card-footer text-center py-3">
                    <p class="text-warning mb-0">Zaten hesabınız var mı? <a asp-action="Signin" asp-controller="Auth"> Oturum açın</a></p>
                </div>
                </div>